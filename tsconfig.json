{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",        // switched from "bundler" to "node"
    "resolveJsonModule": true,         // now recognized
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["next", "node"],         // added trailing comma
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "baseUrl": "."                     // recommended for your "@/*" alias
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/api/dictionary/route.js",
    "app/api/seed/route.js"
, "next.config.js"  ],
  "exclude": ["node_modules"]
}
